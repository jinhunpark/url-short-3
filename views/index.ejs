<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>URL Shortener</title>
    <link rel="stylesheet" href="index.css" type="text/css" />
  </head>
  <body>
    <main>
      <section class="form-section">
        <h1 class="page-title">URL Shortener</h1>
        <form class="url-form" action="/URLShort" method="POST">
          <input
            class="url-input"
            type="url"
            placeholder="Paste in a link to shorten it"
            required
            id="fullUrl"
            name="fullUrl"
            autofocus
          />
          <button type="submit" class="submit-button">Shorten</button>
        </form>
      </section>
      <% urlShortObjs.forEach(urlShortObj => {%>
      <section class="result-section" id="<%= urlShortObj.shorturl %>">
        <div class="result">
          <a
            target="_blank"
            class="short-url"
            rel="noopener"
            href="<%= urlShortObj.longurl %> "
            ><%= urlShortObj.shorturl %>
          </a>
        </div>
        <form action="/delete/<%= urlShortObj.shorturl %>" method="POST">
          <input
            type="hidden"
            name="id"
            value="<%= urlShortObj.shorturl %>"
          /><input
            type="submit"
            value="delete"
            class="deleteBtn"
            onclick="document.getElementById('<%= urlShortObj.shorturl %>').style.display='none'"
          />
        </form>
      </section>
      <% }) %>
    </main>

    <script src="main.js"></script>
  </body>
</html>
